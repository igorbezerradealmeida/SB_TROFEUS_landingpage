---
// src/layouts/Layout.astro
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="pt-br" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico">
    <meta name="generator" content={Astro.generator} />
    
    <title>{title}</title>
    <meta name="description" content="Brindes personalizados de alta qualidade para sua empresa." />
    
    <meta property="og:title" content={title} />
    <meta property="og:description" content="Brindes personalizados de alta qualidade para sua empresa." />
    <meta property="og:image" content="/imagens/sua-imagem-principal.jpg" />

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@100;200;300;400;500;600;700;800;900&display=swap" rel="stylesheet">
    </head>
  <body class="antialiased font-sans">
    <slot />
  </body>
</html>